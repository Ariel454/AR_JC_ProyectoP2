<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AR_JC_ProyectoP2.Comentarios"
             Title="Agregar Comentario">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Título" FontSize="20" />
            <Entry x:Name="TitleEntry" Placeholder="Ingrese el título del comentario" />

            <Label Text="Cuerpo del Comentario" FontSize="20" />
            <Editor x:Name="BodyEditor" Placeholder="Ingrese el cuerpo del comentario" HeightRequest="150" />

            <Button Text="Agregar Comentario" Clicked="GuardarComentario" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>