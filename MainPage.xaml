<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AR_JC_ProyectoP2.MainPage">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Bienvenido," FontSize="24" />
                <Label x:Name="NombreLabel" FontSize="18" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    <CollectionView x:Name="collectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Orientation="Vertical">
                    <Image Source="{Binding Poster}" WidthRequest="200" HeightRequest="320" />
                    <Label Text="{Binding Nombre}"/>
                    <Button Text="Publicar reseña" Clicked="Button_Clicked" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>

