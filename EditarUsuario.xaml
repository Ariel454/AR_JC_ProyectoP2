<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AR_JC_ProyectoP2.EditarUsuario"
             Title="EditarUsuario">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Editar Usuario" FontSize="24" />
            <Entry Placeholder="Nombre" x:Name="NombreEntry" />
            <Entry Placeholder="Correo ElectrÃ³nico" x:Name="CorreoEntry" />
            <Picker x:Name="RolPicker" Title="Rol" SelectedIndexChanged="OnRolPickerSelectedIndexChanged">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Usuario</x:String>
                        <x:String>Administrador</x:String>
                        <x:String>Moderador</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Text="Guardar Cambios" Clicked="OnSaveClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>