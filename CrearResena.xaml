<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AR_JC_ProyectoP2.CrearResena"
             Title="CrearResena">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Crear Nueva reseña" FontSize="24" />
            <Entry Placeholder="Titulo: " x:Name="TituloEntry" />
            <Entry Placeholder="Texto: " x:Name="TextoEntry" />
            <Picker x:Name="PeliculaPicker" Title="Película" SelectedIndexChanged="OnRolPickerSelectedIndexChanged"
                ItemsSource="{Binding NombresPeliculas}">
            </Picker>
            <Button Text="Crear" Clicked="OnCreateClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>