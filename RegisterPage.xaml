<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AR_JC_ProyectoP2.RegisterPage"
             Title="RegisterPage">
    <StackLayout>
        <Entry Placeholder="Nombre de usuario" x:Name="UserNameEntry" />
        <Entry Placeholder="Nombre completo" x:Name="NombreEntry" />
        <Entry Placeholder="Correo electrónico" Keyboard="Email" x:Name="emailEntry" />
        <Entry Placeholder="Contraseña" IsPassword="True" x:Name="passwordEntry" />
        <Entry Placeholder="Confirmar contraseña" IsPassword="True" x:Name="confirmPasswordEntry" />

        <Button Text="Registrarse" Clicked="OnRegisterButtonClicked" />
    </StackLayout>
</ContentPage>